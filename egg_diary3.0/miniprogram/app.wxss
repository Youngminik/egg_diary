/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}


/* my */
.my {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    top: 0;
    z-index: 700;
  }
  
  .my_bg {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 699;
  }
  
  .my_bg image {
    width: 100%;
    height: 100%;
  }
  
  .my_header {
    width: 100%;
    height: 400rpx;
    position: relative;
  }
  
  .my_info {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 700;
  }
  
  .my_info_top {
    width: 90%;
    height: 130rpx;
    display: flex;
    flex-flow: row nowrap;
    position: relative;
    left: 5%;
    top: 5%;
    color: white;
  }
  
  .my_info_left {
    width: 112rpx;
    height: 112rpx;
    position: relative;
  }
  
  .my_info_left button {
    width: 112rpx!important;
    height: 112rpx;
    border-radius: 50%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(255, 255, 255, 0.4);
  }
  
  .my_info_right {
    width: 480rpx;
    height: 200rpx;
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    padding: 0 0 0 16rpx;
  }
  
  .my_info_right input{
    max-width: 430rpx;
    width: auto;
  }
  
  .my_info_username {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    position: relative;
    top: 2rpx;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: flex-start;
  }
  
  .my_info_username text {
    max-width: 430rpx;
    width: auto;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: inline-block;
    color: black;
  }
  
  .my_info_location {
    width: 100%;
    height: 130rpx;
    line-height: 44rpx;
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.9);
    position: relative;
    top: 1rpx;
    left: -4rpx;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
  }
  .my_info_bottom {
    position: absolute;
    background-color: rgba(0, 0, 0, 0.25);
    box-shadow: 0 2px 5px 1px rgba(0, 0, 0, 0.1);
    left: 0;
    width: 100%;
    right: 0;
    bottom: 0;
    height: 126rpx;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: center;
  }
  
  .my_info_list {
    width: 25%;
    height: 100%;
    color: white;
    font-size: 26rpx;
    display: flex;
    flex-flow: column wrap;
    justify-content: space-between;
  }
  
  .my_info_list_text {
    width: 100%;
    height: 47%;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    font-size: 28rpx;
  }
  
  .my_info_list_num {
    width: 100%;
    height: 47%;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    font-size: 26rpx;
  }
  
  .my_info_list_border {
    width: 2rpx;
    position: absolute;
    top: 18%;
    bottom: 18%;
    background-color: rgba(255, 255, 255, 0.5);
  }
  
  .my_info_list_border1 {
    left: 25%;
  }
  
  .my_info_list_border2 {
    left: 50%;
  }
  
  .my_info_list_border3 {
    left: 75%;
  }
  
  .my_container {
    position: absolute;
    top: 400rpx;
    bottom: 0;
    left: 0;
    width: 100%;
  }